<div class="page-header">
  <h1>
    Seasonalities
    <a href="/seasonalities/new" class="btn btn-lg btn-success">New Seasonality</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "seasonalities_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :seas_ds_40, "Seas ds 40" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :seas_ds_40_gteq, :class => "form-control", :placeholder => "Seas ds 40 greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :seas_ds_40_lteq, :class => "form-control", :placeholder => "Seas ds 40 less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
  <%= f.label :conv, "Conv" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :conv_gteq, :class => "form-control", :placeholder => "Conv greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :conv_lteq, :class => "form-control", :placeholder => "Conv less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :seas_ds_53, "Seas ds 53" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :seas_ds_53_gteq, :class => "form-control", :placeholder => "Seas ds 53 greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :seas_ds_53_lteq, :class => "form-control", :placeholder => "Seas ds 53 less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
  <%= f.label :growth, "Forecast Growth" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :forecasts_growth_gteq, :class => "form-control", :placeholder => "Forecast Growth greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :forecasts_growth_lteq, :class => "form-control", :placeholder => "Forecast Growth less than or equal to" %>
    </div>
  </div>
</div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/seasonalities" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#seasonalities_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Seas ds 40</th>
        <th>Seas ds 53</th>
        <th>Conv</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @seasonalities.each do |seasonality| %>
      <tr>
        <td><%= seasonality.seas_ds_40 %></td>
        <td><%= seasonality.seas_ds_53 %></td>
        <td><%= seasonality.conv %></td>
        <td><%= seasonality.name %></td>
        <td>
          <a href="/seasonalities/<%= seasonality.id %>" class="btn btn-primary">Show</a>
          <a href="/seasonalities/<%= seasonality.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_seasonality/<%= seasonality.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @seasonalities, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
